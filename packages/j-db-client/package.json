{
  "name": "@journaly/j-db-client",
  "version": "10.0.0-ALPHA.3",
  "description": "Journaly's internal database client.",
  "main": "dist/index",
  "scripts": {
    "build": "tsc",
    "prisma": "node db-check && prisma",
    "migrate:up": "node db-check && prisma migrate up --experimental",
    "migrate:save": "node db-check && prisma migrate save --experimental",
    "reseed-db": "npm run empty-db && npm run migrate:up && npm run seed",
    "db:snapshot": "node db-check.js && pg_dump $DATABASE_URL > snapshot.sql",
    "db:restore": "node db-check.js && npm run empty-db && cat snapshot.sql | psql $DATABASE_URL",
    "empty-db": "node db-check && source .env && psql $DATABASE_URL  -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;'",
    "prisma:generate": "prisma generate"
  },
  "files": [
    "dist/**/*",
    "prisma/**/*"
  ],
  "author": "Journaly",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.21.0"
  },
  "devDependencies": {
    "prisma": "^2.21.0",
    "typescript": "4.2.4"
  }
}
